QMainWindow {
    background-color: #f5f5f5;
    border: none;
}

QToolBar {
    background-color: #eeeeee;
    border: none;
}

QPushButton {
    background-color: #e0e0e0;
    color: #000000;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
    padding: 5px 15px;
}

QPushButton:hover {
    background-color: #d0d0d0;
}

QPushButton:pressed {
    background-color: #c0c0c0;
}

QLabel {
    font-size: 14px;
    color: #333333;
    padding: 5px;
}

QListWidget {
    background-color: transparent;
    border: none;
    padding: 5px;
    font-size: 14px;
}

QListWidget::item {
    padding: 3px; /* 设置间距为10像素 */
}

QListWidget::item:selected {
    background-color: #adbcc6;
    border-radius: 4px;
}

QListWidget::item:hover {
    background-color: #dbe1e6;
    border-radius: 4px;
}

QTextEdit {
    background-color: #ffffff
}

QGroupBox {
    border: none; /* 去除边框 */
    margin-top: 10px; /* 顶部外边距 */
    padding: 0px; /* 内边距 */
    background: transparent; /* 背景透明 */
}

QListView {
    background-color: transparent;
    border: none;
    padding: 5px;
    font-size: 14px;
}

QSplitter::handle {
    background-color: #eeeeee;
    border: 1px #d0d0d0;
}